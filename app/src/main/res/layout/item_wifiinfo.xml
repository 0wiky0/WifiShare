<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dip" >

    <ImageView
        android:id="@+id/img_wifi_type_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img_wifi_type_lock"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_bssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/img_wifi_type_lock"
        android:text="TextView"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/iv_signal_strenth"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_signal_strenth"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_signal_strenth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_signal_strenth"
            android:layout_centerHorizontal="true"
            android:text="100%"
            android:textColor="#ff0000"
            android:textSize="12sp" />
    </RelativeLayout>


</RelativeLayout>